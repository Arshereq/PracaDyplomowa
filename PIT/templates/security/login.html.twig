{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% include('base.html.twig') %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <section class="vh-100" style="background-color: #2779e2;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-9">

                    <h1 class="text-white mb-4">Logowanie</h1>

                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body">

                            <div class="row align-items-center pt-4 pb-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">E-mail</h6>


                                </div>
                                <div class="col-md-9 pe-5">

                                    <input type="email" class="form-control form-control-lg" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus/>

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="row align-items-center py-3">
                                <div class="col-md-3 ps-5">

                                    <h6 class="mb-0">Has≈Ço</h6>

                                </div>
                                <div class="col-md-9 pe-5">

                                    <input class="form-control" rows="3" type="password" name="password" id="inputPassword" autocomplete="current-password" required />
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                </div>
                            </div>

                            <hr class="mx-n3">

                            <div class="px-5 py-4">
                                <button type="submit" class="btn btn-primary btn-lg">Zaloguj</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

{% endblock %}
